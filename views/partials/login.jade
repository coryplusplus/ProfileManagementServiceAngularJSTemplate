doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title SB Admin 2 - Bootstrap Admin Theme
    // Bootstrap Core CSS

    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    .container
      div(ng-init="authorize()", ng-controller='LoginController')
          .row(style='padding-top: 200px')
            .col-md-4.col-md-offset-4


              .login-panel.panel.panel-default
                .panel-heading
                  h3.panel-title Please Sign In
                .panel-body
                  form(role='form')
                    fieldset
                      .form-group
                        input.form-control(placeholder='Username', name='username', type='username',autofocus='', ng-model="username")
                      .form-group
                        input.form-control(placeholder='Password', name='password', type='password', value='=', ng-model="password")
                      // Change this to a button or input when using this as a form
                      a.btn.btn-lg.btn-primary.btn-block(ng-click="userLogin(username,password)",ng-disabled="progress") Login
                      a.btn.btn-small.btn-info.btn-link.btn-block(href="createProfile") Sign Up
                      a.btn.btn-small.btn-info.btn-link.btn-block(href="resetPassword") Forgot Password


                      div(ng-show='error')
                        .alert.alert-danger.text-center {{error}}
                      div(ng-show='errorMessage')
                        .alert.alert-warning.text-center {{errorMessage}}
                      div(ng-show='success')
                        .alert.alert-success.text-center {{success}}
    


                    


